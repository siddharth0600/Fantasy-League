<%- include("partials/header"); -%>

<% cos.forEach(function(co){ %>
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Country</th>
      <th scope="col">Experience(in years)</th>
      <th scope="col">Price</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th scope="row"><%= co.c_id %></th>
      <td><%= co.name %></td>
      <td><%= co.con %></td>
      <td><%= co.exp %></td>
      <td><%= co.price %></td>
    </tr>
  </tbody>
</table>
<% }) %>

<h2>Type all the details of the coach you want to insert in your team from the above list</h2>
<form class="" action="/coach" method="post">
  <div class="form-group">
    <label>Coach ID</label>
    <input class="form-control" type="text" name="c_id" placeholder="CXXX">
    <label>Coach Name</label>
    <input type="text" name="c_name" class="form-control">
    <label>Coach Country</label>
    <input type="text" name="c_country" class="form-control">
    <label>Coach Experience in years</label>
    <input type="text" name="c_exp" class="form-control">
    <label>Coach Price</label>
    <input type="text" name="c_price" class="form-control">
  </div>
  <button class="btn btn-primary" type="submit" name="button"> Add coach </button>
</form>


<%- include("partials/footer"); -%>
