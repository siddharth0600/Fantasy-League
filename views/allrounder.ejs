<%- include("partials/header"); -%>

<% alls.forEach(function(all){ %>
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Matches Played</th>
      <th scope="col">Runs Scored</th>
      <th scope="col">Wickets taken</th>
      <th scope="col">Price</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th scope="row"><%= all.a_id %></th>
      <td><%= all.name %></td>
      <td><%= all.matches %></td>
      <td><%= all.runs %></td>
      <td><%= all.wickets %></td>
      <td><%= all.price %></td>
    </tr>
  </tbody>
</table>
<% }) %>

<h2>Type all the details of the All-Rounder you want to insert in your team from the above list</h2>

<form class="" action="/allrounder" method="post">
  <div class="form-group">
    <label>All-Rounder ID</label>
    <input class="form-control" type="text" name="a_id" placeholder="AXXX">
    <label>All-Rounder Name</label>
    <input type="text" name="a_name" class="form-control">
    <label>Total Runs Scored</label>
    <input type="text" name="a_runs" class="form-control">
    <label>Total Matches played</label>
    <input type="text" name="a_match" class="form-control">
    <label>Total Wickets taken</label>
    <input type="text" name="a_wicket" class="form-control">
    <label>Enter Price</label>
    <input type="text" name="a_price" class="form-control">
  </div>
  <button class="btn btn-primary" type="submit" name="button"> Add All-Rounder </button>
</form>



<%- include("partials/footer"); -%>
