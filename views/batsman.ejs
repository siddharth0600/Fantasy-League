<%- include("partials/header"); -%>

<% bats.forEach(function(bat){ %>
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Matches Played</th>
      <th scope="col">Runs Scored</th>
      <th scope="col">Strikerate</th>
      <th scope="col">Price</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th scope="row"><%= bat.b_id %></th>
      <td><%= bat.name %></td>
      <td><%= bat.matches %></td>
      <td><%= bat.runs %></td>
      <td><%= bat.strikeRate %></td>
      <td><%= bat.price %></td>
    </tr>
  </tbody>
</table>
<% }) %>

<h2>Type all the details of the batsman you want to insert in your team from the above list</h2>

<form class="" action="/batsman" method="post">
  <div class="form-group">
    <label>Batsman ID</label>
    <input class="form-control" type="text" name="b_id" placeholder="BXXX">
    <label>Batsman Name</label>
    <input type="text" name="b_name" class="form-control">
    <label>Total Runs Scored</label>
    <input type="text" name="b_runs" class="form-control">
    <label>Total matches played</label>
    <input type="text" name="b_match" class="form-control">
    <label>Strike Rate</label>
    <input type="text" name="b_rate" class="form-control">
    <label>Enter Price</label>
    <input type="text" name="b_price" class="form-control">
  </div>
  <button class="btn btn-primary" type="submit" name="button"> Add Batsman to your team </button>
</form>

<%- include("partials/footer"); -%>
